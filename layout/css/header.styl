header
    border-bottom 1px solid $pri-color
    nav
        height $header-height
        &:after
            clear both
            content ''
            display table
        .site-logo
            float left
            font-size 26px
            line-height $header-height
            color $pri-color
        ul
            float right
            li
                display inline-block
                a
                    font-size 16px
                    padding 0 15px;
                    line-height $header-height
                    display block
                    color $pri-color
                    transition color 0.2s ease-in-out
                    &:hover
                        color $sec-color
