header
    border-bottom 1px solid $pri-color
    nav
        height $header-height
        &:after
            clear both
            content ''
            display table
        .site-logo
            float left
            font-size 26px
            line-height $header-height
            color $pri-color
            .first-letter
                background $sec-color
                display inline-block
                border-radius 50%
                width 50px
                height 50px
                line-height 50px
                text-align center
                color #fff
                margin-right 5px
        ul
            float right
            li
                display inline-block
                a
                    font-size 16px
                    padding 0 15px;
                    line-height $header-height
                    display block
                    color $pri-color
                    transition color 0.2s ease-in-out
                    &:hover
                        color $sec-color
