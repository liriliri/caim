*
    box-sizing border-box

html, body
    height 100%

html, body, header, footer, ul
    padding 0
    margin 0

body
    font-family "Helvetica Neue", "微软雅黑", Helvetica, Arial, sans-serif

ul
    list-style none

a
    text-decoration none

// Needed to implement sticky footer.
.content-wrapper
    min-height 100%
    padding-bottom $footer-height
    overflow auto

.container
    width: 1024px
    padding 0
    margin 0 auto

.hidden
    display none

::-webkit-scrollbar-thumb
    background $pri-color
    border 1px solid #fff

::-webkit-scrollbar-thumb:hover
    background-color $sec-color

::-webkit-scrollbar
    width 15px


